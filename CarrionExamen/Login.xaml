<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarrionExamen.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Beige" Padding="24" CornerRadius="0">
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
        </Frame>
        <Entry x:Name="txtUsuario" Placeholder="Ingrese su usuario"/>
        <Entry x:Name="txtClave" Placeholder="Ingrese su contraseña" IsPassword="True"/>

        <Button x:Name="btnIngresar" Text="Ingresar" Clicked="btnIngresar_Clicked"/>
    </StackLayout>

</ContentPage>
